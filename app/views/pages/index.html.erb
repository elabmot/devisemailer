<!--Index Page-->
 <div class="row">
 <!-- Blog Post Content Column -->
 <div class="col-lg-8">
 <!-- Blog Post -->
 <!-- Title -->
 <div class="jumbotron">
  <h1 class="display-3">Tom's Articles</h1>
  <p class="lead">Welcome to Tom's Articles! A buitiful Articles app build with Ruby on Rails.</p>
  <hr class="my-4">
  <p>This is my first try so apologies if it looks a bit rubbish.</p>
</div>
</div>

 <!-- Blog Categories Well -->

 <!-- /.row -->

 <!-- Side Widget Well -->
 <div class="well col-lg-4">
 <h4>Recent Posts</h4>
   <% @articles.each do |article| %>
   <h2><%= link_to article.title, article %></h2>
   <h4>Created by <%= article.user.username unless article.user.blank? %></h4>
   <p><%= truncate(article.body, length: 120) %></P>
   <% end %>
 </div>
 </div>
