
<div class="row">
 <!-- Blog Post Content Column -->
 <div class="col-lg-8">
 <!-- Blog Post -->
 <!-- Title -->
 <h1 style="font-size: 62.5px;">
 <%= @article.title %>
 </h1>
 <!-- Author -->
 <p class="lead">
 <%= @article.user.username unless @article.user.blank? %>
 </p>
 <hr>
 <!-- Date/Time -->
 <p><span class="glyphicon glyphicon-time"></span> Was Posted:
 <%= @article.created_at.to_formatted_s(:long_ordinal) %>

 <hr>
 <!-- Preview Image -->
 <!-- Blog Comments -->
 <%= @article.body %>
 <hr>
 <!-- Comments Form -->
 <%= render @article.comments %>
 <h3>Post a Comment</h3>
 <%= render 'comments/form' %>

 <!-- Posted Comments -->
 <!-- Comment -->
 </div>
 <!-- Blog Sidebar Widgets Column -->
 <div class="col-md-4">
 <!-- Blog Search Well -->

 <!-- Blog Categories Well -->

 <!-- Side Widget Well -->
 <div class="well">
 <h4></h4>

 </div>
 </div>
</div>

<hr>
